
<h1> Welcome, these are all articles </h1>

<% if flash.now[:notice] %>
	<p><%= flash.now[:notice] %></p>
<% end %>

<table>

<thead>
	<tr> 
		<th>#</th>
		<th>Name</th>
		<th>|Body|</th>
		<th>Created at</th>
		<th> </th>
	</tr>
</thead>
<tbody>
	<% @articles.each do |f| %>
		<tr>
			<td> <%= f.id %> </td>
			<td> <%= f.name %> </td>
			<td>| <%= f.body %> |</td>
			<td> <%= f.created_at %> </td>
		</tr>
		<% end %>
<p>
	<%= link_to 'Back', users_path %>
</p>
</tbody>
</table>
