<h1>Users</h1>

<% if flash.now[:notice] %>
	<p><%= flash.now[:notice] %></p>
<% end %>

<table>
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Email</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td>
					<%= user.id %>
				</td>
				<td>
					<%= user.name %>
				</td>
				<td>
					<%= user.email %>
				</td>
				<td>
					<%= link_to 'Edit', edit_user_path(user) %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
