<h1>Users</h1>

<% if flash.now[:notice] %>
	<p><%= flash.now[:notice] %></p>
<% end %>

<table>
	<thead>
		<tr>
			<th>#</th>
			<th>Name</th>
			<th>Email</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td>
					<%= user.id %>
				</td>
				<td>
					<%= user.name %>
				</td>
				<td>
					<%= user.email %>
				</td>
				<td>
					<%= link_to 'Edit', edit_user_path(user) %>
				</td>
	

				<td>
					<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
	
			</tr>
		<% end %>
	</tbody>
</table>

<h2>
	<%= link_to 'Signup', new_user_path(@user) %>
</h2>
<p>
	<%= link_to 'Articles', articles_path %>
</p>